<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Roth</display-name>
  <distributable/>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>CSS</display-name>
    <servlet-name>CSS</servlet-name>
    <servlet-class>com.roth.servlet.CssServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CSS</servlet-name>
    <url-pattern>/css/*</url-pattern>
    <url-pattern>/themes/default/css/*</url-pattern>
    <url-pattern>/themes/default-mobi/css/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>JS</display-name>
    <servlet-name>JS</servlet-name>
    <servlet-class>com.roth.servlet.JsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>JS</servlet-name>
    <url-pattern>/js/*</url-pattern>
    <url-pattern>/themes/default/js/*</url-pattern>
    <url-pattern>/themes/default-mobi/js/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>Export</display-name>
    <servlet-name>Export</servlet-name>
    <servlet-class>com.roth.servlet.ExportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Export</servlet-name>
    <url-pattern>/Export/*</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>usePortalSettings</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>scheduleJndiName</param-name>
    <param-value>roth</param-value>
  </context-param>
  <listener>
    <listener-class>com.roth.servlet.RothContextListener</listener-class>
  </listener>
  <!-- 
  <listener>
    <listener-class>com.roth.log.LogContextListener</listener-class>
  </listener>
   -->
  <listener>
    <listener-class>com.roth.schedule.ScheduleContextListener</listener-class>
  </listener>
  <error-page>
    <location>/error.jsp</location>
  </error-page>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/login.jsp?error=true</form-error-page>
    </form-login-config>
  </login-config>
  
